<?xml version='1.0' encoding='utf-8'?>
<widget id="it.test.parkinbo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ParkinBo</name>
    <description>
        L'applicazione del lavaggio strade di Bologna
    </description>
    <author email="gianmaria.leoni@gmail.com" href="https://github.com/giammaleoni">
        Gianmaria Leoni
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    <!-- gestisce la status bar per ios --> 
    <preference name="StatusBarOverlaysWebView" value="false" /> 
	<preference name="StatusBarBackgroundColor" value="#0088D1" />
	<preference name="StatusBarStyle" value="lightcontent" />
	
	<!-- le icone sono da configurare per diversi dispositivi e diverse risoluzioni-->
	<icon src="res/Pulizia_strade72.png" />
	
	<!-- sostituire preloader con splash screen https://github.com/apache/cordova-plugin-splashscreen
	<preference name="SplashScreen" value="foo" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="SplashMaintainAspectRatio" value="true|false" /> -->
	
</widget>
